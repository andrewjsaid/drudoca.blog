@page "{year}/{month}/{day}/{slug}"
@model Drudoca.Blog.Web.Pages.Blog.PostModel
@{
    ViewData["Title"] = "Post";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@{
    var post = Model.Post!;
}

<h1 class="post-title">@post.Title</h1>
<h2 class="post-published">Published @post.PublishedOn.ToString("Y")</h2>
<h2 class="post-author">Author @post.Author</h2>

@post.Markdown