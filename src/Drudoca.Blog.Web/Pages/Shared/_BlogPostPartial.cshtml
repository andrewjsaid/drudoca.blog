@model (Drudoca.Blog.Domain.BlogPost post, bool isFull)

@{
    var (post, isFull) = Model;
}

<div class="blog-post">
    <h2 class="post-title">
        <a asp-page="Post"
           asp-route-year="@post.PublishedOn.Year"
           asp-route-month="@post.PublishedOn.Month"
           asp-route-day="@post.PublishedOn.Day"
           asp-route-slug="@post.Slug">
            @post.Title
        </a>
    </h2>
    <span class="post-published">Published @post.PublishedOn.ToString("Y")</span>
    <span class="post-author">Author @post.Author</span>

    @if (isFull)
    {
        <div class="post-body">
            @Html.Raw(post.Html)
        </div>
    }
    else
    {
        <div class="post-body">
            @Html.Raw(post.IntroHtml ?? post.Html)
        </div>

        @if (post.IntroHtml != null)
        {
            <div class="post-read-more">
                <a asp-page="Post"
                   asp-route-year="@post.PublishedOn.Year"
                   asp-route-month="@post.PublishedOn.Month"
                   asp-route-day="@post.PublishedOn.Day"
                   asp-route-slug="@post.Slug">
                    Read more
                </a>
            </div>
        }
    }
</div>